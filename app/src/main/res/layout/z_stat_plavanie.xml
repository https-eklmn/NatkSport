<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#353433">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFA500"/>

        <TextView
            android:id="@+id/textViewPlayerNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#FFA500"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#1c1c1c"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/OneHundrMetrsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:text="Заплыв на 50м"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewBestOneHundrMetrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#FFA500"
                    android:text="Лучшее время прохождения дистанции:"/>

                <TextView
                    android:id="@+id/textViewWorstOneHundrMetrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#FFA500"
                    android:text="Худшее время прохождения дистанции:"/>

                <TextView
                    android:id="@+id/textViewAverageOneHundrMetrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Среднее время прохождения дистанции:"
                    android:textSize="18sp"
                    android:textColor="#FFA500"/>

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/OneHundrMetrsGraph"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#1c1c1c"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/FourHundrMetrsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="#FFA500"
                    android:text="Эстафета на 100м"
                    android:layout_gravity="center"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textViewBestFourHundrMetrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#FFA500"
                    android:text="Лучшее время прохождения дистанции:"/>

                <TextView
                    android:id="@+id/textViewWorstFourHundrMetrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#FFA500"
                    android:text="Худшее время прохождения дистанции:"/>

                <TextView
                    android:id="@+id/textViewAverageFourHundrMetrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Среднее время прохождения дистанции:"
                    android:textSize="18sp"
                    android:textColor="#FFA500"/>

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/FourHundrMetrsGraph"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>